<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/titlecolor">

        <TextView
            android:id="@id/navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/name_margin_small"
            android:clickable="true"
            android:text="@string/navigation"
            android:textColor="@color/black" />

        <TextView
            android:id="@id/fragment_greengarden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/greentown_liuxiang"
            android:textColor="@color/black"
            android:textSize="@dimen/margin_left" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_greengarden"
            android:layout_centerInParent="true"
            android:src="@mipmap/green_town" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/name_margin_small"
            android:src="@mipmap/message" />

    </RelativeLayout>


</LinearLayout>
